{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "laravel-labs/starter-kit-browser-tests",
    "description": "Browser Tests for Laravel Starter Kit",
    "type": "library",
    "license": "MIT",
    "keywords": ["dev"],
    "autoload": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.3",
        "laravel/framework": "^12.27",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-browser": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0"
    },
    "require-dev": {
        "orchestra/testbench-core": "^10.6.4",
        "orchestra/testbench": "^10.6",
        "laravel/livewire-starter-kit": "^1.0"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@prepare"
        ],
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "livewire:install": "@composer require --dev \"laravel/livewire-starter-kit\"",
        "livewire:uninstall": "@composer remove --dev \"laravel/livewire-starter-kit\"",
        "livewire:build": [
            "@vue:uninstall",
            "@livewire:install",
            "cd \"./vendor/laravel/livewire-starter-kit\" && composer remove --dev \"laravel/sail\" --no-update",
            "cd \"./vendor/laravel/livewire-starter-kit\" && composer install",
            "cd \"./vendor/laravel/livewire-starter-kit\" && composer run post-root-package-install",
            "cd \"./vendor/laravel/livewire-starter-kit\" && composer run post-create-project-cmd",
            "cd \"./vendor/laravel/livewire-starter-kit\" && npm ci",
            "cd \"./vendor/laravel/livewire-starter-kit\" && npm run build",
            "cd \"./vendor/laravel/livewire-starter-kit\" && php artisan optimize:clear"
        ],
        "livewire:test": "APP_BASE_PATH=./vendor/laravel/livewire-starter-kit php vendor/bin/pest",
        "livewire:ci": [
            "@livewire:build",
            "@livewire:test",
            "@livewire:uninstall"
        ],
        "livewire:serve": "cd \"./vendor/laravel/livewire-starter-kit\" && php artisan serve",
        "vue:install": "@composer require --dev \"laravel/vue-starter-kit\"",
        "vue:uninstall": "@composer remove --dev \"laravel/vue-starter-kit\"",
        "vue:build": [
            "@livewire:uninstall",
            "@vue:install",
            "@composer require --dev \"laravel/vue-starter-kit:dev-pest-ci\"",
            "cd \"./vendor/laravel/vue-starter-kit\" && composer remove --dev \"laravel/sail\" --no-update",
            "cd \"./vendor/laravel/vue-starter-kit\" && composer install",
            "cd \"./vendor/laravel/vue-starter-kit\" && composer run post-root-package-install",
            "cd \"./vendor/laravel/vue-starter-kit\" && composer run post-create-project-cmd",
            "cd \"./vendor/laravel/vue-starter-kit\" && npm ci",
            "cd \"./vendor/laravel/vue-starter-kit\" && npm run build",
            "cd \"./vendor/laravel/vue-starter-kit\" && php artisan optimize:clear"
        ],
        "vue:test": "APP_BASE_PATH=./vendor/laravel/vue-starter-kit php vendor/bin/pest",
        "vue:ci": [
            "@vue:build",
            "@vue:test",
            "@vue:uninstall"
        ],
        "vue:serve": "cd \"./vendor/laravel/vue-starter-kit\" && php artisan serve"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
